{
  "name": "multiplayer-tetris",
  "version": "1.0.0",
  "description": "Multiplayer tetris built with the MERN stack",
  "scripts": {
    "start": "node ./bin/www",
    "devserver": "nodemon ./bin/www",
    "devclient": "cd client && npm start",
    "dev": "concurrently --kill-others-on-fail \"npm run devserver\" \"npm run devclient\"",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build",
    "test": "jest --watch",
    "coverage": "jest --coverage",
    "serverlint": "./node_modules/.bin/eslint server tests",
    "clientlint": "./client/node_modules/.bin/eslint client"
  },
  "repository": "https://github.com/Dereje1/Multiplayer-Tetris.git",
  "author": "Dereje Getahun",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "cookie-session": "^2.0.0-beta.3",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "mongoose": "^5.4.4",
    "morgan": "^1.9.1",
    "passport": "^0.5.3",
    "passport-google-oauth": "^2.0.0",
    "path": "^0.12.7",
    "socket.io": "^4.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-runtime": "^7.18.6",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "babel-eslint": "10.0.1",
    "babel-jest": "^28.1.2",
    "concurrently": "^4.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.3",
    "jest": "^28.1.2",
    "nodemon": "^2.0.19",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "jest": {
    "transform": {
      "\\.js$": "<rootDir>/node_modules/babel-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "babel-jest",
      "\\.(css|less|scss)$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "./testingSetup/enzymeSetup.js",
      "./testingSetup/jestSetup.js"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/myscripts/**"
    ]
  },
  "engines": {
    "node": "14.18.0",
    "npm": "6.14.15"
  }
}
